<tr>
  <td><%= auction_detail.id %></td>
  <td><%= auction_detail.auction.product.name %></td>
  <td><%= auction_detail.created_at %></td>
  <td><%= auction_detail.updated_at %></td>
  <td><%= show_auction_detail_status auction_detail.status %></td>
  <td>
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal<%=auction_detail.id%>"><span class="fa fa-info"></span></button>
    <div class="modal fade" id="myModal<%=auction_detail.id%>" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Lịch sử đấu giá</h4>
          </div>
          <div class="modal-body">
            <% if auction_detail.bids.any? %>
              <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Tên người đấu giá</th>
                    <th>Số tiền</th>
                    <th>Thời gian đấu giá</th>
                  </tr>
                </thead>
                <tbody>
                  <%  auction_detail.bids.each do |e|%>
                    <tr>
                      <td><%= e.id %></td>
                      <td><%= e.user.last_name + " " + e.user.first_name %></td>
                      <td><%= e.amount %></td>
                      <td><%= e.updated_at %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <p>Không có người đấu giá</p>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>
