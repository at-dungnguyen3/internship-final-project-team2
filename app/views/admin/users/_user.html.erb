<tr>
  <td class="align-middle"><%= user.id %></td>
  <td class="align-middle"><%= user.last_name + " " + user.first_name %></td>
  <td class="align-middle"><%= user.email %></td>
  <td class="align-middle"><%= render "admin/users/activate", user: user %></td>
  <td class="align-middle"><%= show_role user  %></td>
  <td class="align-middle">
    <%= link_to edit_admin_user_path(user), class: "btn btn-warning" do %>
      <%= content_tag(:i, "", class: "fa fa-edit fa-fw", title: "Cập nhập tài khoản") %>
    <% end %>
    <%= link_to admin_user_path(user), data: { confirm: "Bạn chắc chắn muốn xóa tài khoản này?" }, method: :delete, class: "btn btn-danger" do %>
      <%= content_tag(:i, "", class: "fa fa-trash fa-fw", title: "Xóa tài khoản") %>
    <% end %>
  </td>
</tr>
