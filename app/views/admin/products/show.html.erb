<% provide(:page_name, @product.name ) %>
<% provide(:search_path, admin_products_path) %>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <div>
        <%= @product.name %>
      </div>
      <div>
        <%= @product.category.name %>
      </div>
      <div>
        <%= @product.quantity %>
      </div>
      <div>
        <%= @product.price %>
      </div>
      <div>
        <%= @product.description %>
      </div>
      <div>
        <%= @product.detail %>
      </div>
      <%= render partial: "picture", collection: @product.pictures %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
