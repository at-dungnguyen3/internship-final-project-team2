<div id="loginbox" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">                    
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Đăng nhập</div>
    </div>  
    <div class="panel-body">
      <%= render "shared/flash_message" %>
      <%= form_for(:session, url: login_path, html: { id: "loginform", class: "form-horizontal" }) do |f| %>
        <div style="margin-bottom: 25px" class="input-group col-md-offset-2 col-md-8">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :email, placeholder: "Địa chỉ email", class: "form-control" %>                                    
        </div>

        <div style="margin-bottom: 10px" class="input-group col-md-offset-2 col-md-8">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, placeholder: "Mật khẩu", class: "form-control" %>                                    
        </div>

        <div class="input-group col-md-offset-2 col-md-8">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>
              <span>Ghi nhớ đăng nhập</span>
            </label>
          </div>
        </div>

        <div style="margin-top:10px" class="form-group">
            <!-- Button -->
          <div class="col-sm-12 controls col-md-offset-2 col-md-8">
            <%= f.submit "Đăng nhập", class: "btn btn-success" %>
            <%= link_to "Đăng nhập bằng Google+", "/auth/google_oauth2", class: "btn btn-danger" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12 control">
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
              Chưa có tài khoản!
              <%= link_to "Đăng ký", signup_path %>
              <%= link_to "Quên mật khẩu?", "", class: "pull-right" %>
            </div>
          </div>
        </div>   
      <% end %>
    </div>
  </div>
</div>
<div class="clearfix"></div>
