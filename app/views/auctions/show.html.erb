<div class="container" id="auction_id" data-auction-id="<%= params[:id] %>">    
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <div class="img-container">
          <%= image_tag @product.pictures.first.image.url, alt: @product.name, id: "expandedImg" %>
          <div id="imgtext"></div>
        </div>
      </div>
      <div class="row" id="sub-image">
        <% @product.pictures.each do |p| %>
          <div class="column-img">
            <%= image_tag p.image.url, alt: @product.name, onclick: "changeImage(this)" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="auction_info">
        <h1 id="product_name">LOADING</h1>
        <h3>Thời gian còn lại: </h3><h2 class="time_count" id="auction_period">LOADING</h2>
        <h3>Giá thầu hiện tại: <span id="auction_price">LOADING</span></h3>
        <h3>Đấu giá ngay:</h3>
        <div class="col-xs-4">
          <input type="number" id="bid_amount" class="form-control" disabled>
        </div>
        <div class="col-xs-3">
          <button id="bid_btn" class="btn btn-success">Đấu giá</button>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <table class="w3-table" id="bids_history">
      <thead>
        <tr>
          <th>Tài khoản</th>
          <th>Giá dự thầu</th>
          <th>Thời gian đấu giá</th>
        </tr>
      </thead>
      <tbody>
        <%= render @bids %>
      </tbody>
    </table>
  </div>
  <div class="row tab-product">
    <div class="tab">
      <button id="defaultOpen" class="tablinks" onclick="openTab(event, 'description')">Mô tả sản phẩm</button>
      <button class="tablinks" onclick="openTab(event, 'detail')">Chi tiết sản phẩm</button>
    </div>
    <div id="description" class="tabcontent">
      <h3>Mô tả sản phẩm</h3>
      <div id="product_description">LOADING></div>
    </div>

    <div id="detail" class="tabcontent">
      <h3>Chi tiết sản phẩm</h3>
      <div id="product_detail"><%= @product.detail.html_safe %></div> 
    </div>
  </div>
</div><br><br>

<script>
  $("#defaultOpen").click();  
</script>
